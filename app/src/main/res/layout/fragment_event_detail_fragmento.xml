<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.events.EventDetailFragmento"
    android:background="#FFF8E7"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">


    <LinearLayout
        android:id="@+id/linearLayoutEventDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/eventDetailImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"/>


        <LinearLayout
            android:id="@+id/eventImageEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnEditEventImageSelect"
                style="@style/CustomButtonStyleShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addEventTextEventImgBox"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnEditEventImageCapture"
                style="@style/CustomButtonStyleShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addEventTextEventImgBoxCap"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/eventDetailNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventDetailNameTitle"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/eventDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/etEditEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addEventTextEventNameBox"
            android:background="@drawable/edittext_background"
            android:padding="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="gone"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/eventDetailDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventDetailDescriptionTitle"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/eventDetailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/etEditEventDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addEventTextEventNameBox"
            android:background="@drawable/edittext_background"
            android:padding="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/eventDetailDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventDetailDateTitle"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/eventDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnPickDateTime"
            style="@style/CustomButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addEventTextEventAddTimeDateBtn"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/eventDetailLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventDetailLocationTitle"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/eventDetailLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/etEditEventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addEventTextEventNameBox"
            android:background="@drawable/edittext_background"
            android:padding="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/eventDetailTransportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventDetailTransportTitle"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <CheckBox
            android:id="@+id/checkboxEditEventTransport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addEventTextEventTranspBox"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/eventDetailTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="8dp" />


        <Button
            android:id="@+id/btnEditEventSubmit"
            style="@style/CustomButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editEventTextEventEditBtn"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/loading_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cotonete"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnDeleteEvent"
            style="@style/CustomRedButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editEventTextEventDeleteBtn"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/closeGestureImageViewFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/baseline_close_24"
        android:tint="#FFF8E7"
        android:visibility="gone"/>

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/gestureImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_event_img"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="72dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/baseline_edit_24"
        android:tint="#FFF8E7"/>

</FrameLayout>