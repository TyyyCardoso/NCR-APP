<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.didyouknow.DidYouKnowAddFragmento"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">




            <TextView
                android:id="@+id/NewDidYouKnowTitleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mainNavScheduleButton"
                android:textStyle="bold"
                android:paddingBottom="4dp"/>

            <EditText
                android:id="@+id/nomeDoFicheiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mainScheduleAddFileName"
                android:background="@drawable/edittext_background"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp" />


            <Button
                android:id="@+id/btnSelectFile"
                style="@style/CustomButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mainScheduleSelectFile"
                android:layout_marginBottom="8dp"/>


            <Button
                android:id="@+id/btnNewDidYouKnowSubmit"
                style="@style/CustomButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mainScheduleCreateSchedule"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/loading_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cotonete"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

        </LinearLayout>


    </ScrollView>

</FrameLayout>